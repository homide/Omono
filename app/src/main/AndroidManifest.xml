<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.project.main">

    <uses-permission android:name="android.permission.INTERNET" />

    <supports-screens
        android:largeScreens="true"
        android:normalScreens="true"
        android:smallScreens="true"
        android:xlargeScreens="true" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/omonologo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Main_Electronics_category"></activity>
        <activity android:name=".Main_Medicine_category" />
        <activity android:name=".Main_Fashion_category" />
        <activity android:name=".Main_Groceries_category" />
        <activity android:name=".Main_General_category" />
        <activity android:name=".Notifications" />
        <activity android:name=".Feedback" />
        <activity android:name=".Wishlist.WishlistActivity"/>
        <activity android:name=".SelectCategoryClass" />
        <activity
            android:name=".Main2Activity"
            android:windowSoftInputMode="adjustPan" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>